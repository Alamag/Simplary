<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="14dp"
    app:cardCornerRadius="18dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/taskCircleColor"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="26dp"
            android:src="@drawable/ic_baseline_circle_24" />

        <ImageView
            android:id="@+id/taskSquare"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/checkbox" />

        <TextView
            android:id="@+id/taskName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/taskCircleColor"
            android:fontFamily="@font/roboto"
            android:text="Task Name"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/taskBell"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@id/taskName"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/taskCircleColor"
            android:src="@drawable/ic_notifications_black_24dp" />

        <TextView
            android:id="@+id/taskTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/taskName"
            android:layout_marginStart="5dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@id/taskBell"
            android:fontFamily="@font/roboto"
            android:text="text"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/taskCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/taskName"
            android:layout_marginStart="15dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@id/taskTime"
            android:fontFamily="@font/roboto"
            android:text="text"
            android:textSize="15sp" />
        <ImageView
            android:id="@+id/taskSquareComplete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/checkbox_complete" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>